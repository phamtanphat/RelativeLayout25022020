<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:background="#1E88E5"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:text="Blue"
        android:id="@+id/textviewBlue"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#7CB342"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:text="Green"
        android:id="@+id/textviewGreen"
        android:layout_alignLeft="@id/textviewBlue"
        android:layout_above="@id/textviewBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#D81B60"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:text="Red"
        android:id="@+id/textviewRed"
        android:layout_alignLeft="@id/textviewBlue"
        android:layout_above="@id/textviewGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#FFB300"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:text="Orange"
        android:id="@+id/textviewOrange"
        android:layout_alignLeft="@id/textviewBlue"
        android:layout_below="@id/textviewBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#6C6B6A"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:text="Gray"
        android:id="@+id/textviewGray"
        android:layout_alignLeft="@id/textviewBlue"
        android:layout_below="@id/textviewOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#AC1E83"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:text="Pink"
        android:id="@+id/textviewPink"
        android:layout_alignLeft="@id/textviewBlue"
        android:layout_below="@id/textviewGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>